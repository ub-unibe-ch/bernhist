{% set route = app.request.get('_route') %}
<!DOCTYPE HTML>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('favicon.ico') }}">

    <title>BERNHIST - Historisch-Statistische Datenbank des Kantons Bern</title>

    {{ encore_entry_link_tags('app') }}
</head>

<body>

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="{{ path('home') }}">BERNHIST</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Das Projekt</a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <a class="dropdown-item{% if route == "whatis" %} active{% endif %}" href="{{ path('whatis') }}">Was ist Bernhist?</a>
                    <a class="dropdown-item{% if route == "history" %} active{% endif %}" href="{{ path('history') }}">Geschichte von Bernhist</a>
                    <a class="dropdown-item{% if route == "literature" %} active{% endif %}" href="{{ path('literature') }}">Literatur</a>
                    <a class="dropdown-item{% if route == "contact" %} active{% endif %}" href="{{ path('contact') }}">Kontakt</a>
                </div>
            </li>
            <li class="nav-item{% if route == "query" %} active{% endif %}">
                <a class="nav-link" href="{{ path('query') }}">Datenabfrage</a>
            </li>
            <li class="nav-item">
                <a target="_blank" class="nav-link" href="https://www.digibern.ch/">DIGIBERN</a>
            </li>
        </ul>
    </div>
</nav>

<main role="main" class="container">
    {% block title %}
    {% endblock %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block content %}
    {% endblock %}
</main>

<footer class="footer mt-auto py-3">
    <div class="container">
        <span class="text-muted float-left"><small>BERNHIST, ein Projekt der Abteilung für Wirtschafts-, Sozial- und Umweltgeschichte am Historisches Institut der Universität Bern.</small></span>
        <span class="text-muted float-right"><small><a target="_blank" href="{{ path('api_documentation') }}">OAI API</a> | <a target="_blank" href="https://github.com/UB-Bern/bernhist">Github</a></small></span>
    </div>
</footer>

{{ encore_entry_script_tags('app') }}
</body>
</html>
